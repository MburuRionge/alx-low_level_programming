CFLAGS = -Wall -Werror -Wextra -pedantic
CC = gcc
SRC = school.c main.c
OBJ = $(SRC: .c=.o)
NAME = 	school
RM = rm

.PHONY: all clean oclean fclean re

all: $(NAME) 

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $^ -o $@

clean:
	$(RM) -f (NAME) *~

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean

re: oclean all

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@
